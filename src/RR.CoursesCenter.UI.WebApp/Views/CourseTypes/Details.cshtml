@using RR.CoursesCenter.UI.WebApp.Filters;
@model RR.CoursesCenter.Application.ViewModels.CourseTypeViewModel

<h2>@ViewBag.Title</h2>
<hr />

<div class="panel panel-default">
    <div class="panel-heading">@Html.DisplayFor(model => model.Identification)</div>
    <br />
    <div>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Active)</dt>
            <dd>
                @{
                    var active = Model.Active ? "Sim" : "Não";
                    @Html.DisplayFor(model => active)
                }
            </dd>
        </dl>
    </div>

</div>

<div>
    @if (this.IfClaim("CourseType", "ED"))
    {
        <a href="@Url.Action("Edit", "CourseTypes", new { id = Model.Id })" class="btn btn-warning">
            <span title="Editar Tipo de Curso">Editar</span>
        </a>
    }

    <a href="@Url.Action("Index", "CourseTypes")" class="btn btn-default">
        <span title="Lista Tipos de Cursos Ativos">Voltar</span>
    </a>
</div>